{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "A simple Electron application",
  "author": "Sam",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sampx/first-electron-app.git"
  },
  "scripts": {
    "start": "electron --disable-http-cache .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "**/*",
      "!node_modules"
    ],
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github"
    }
  },
  "dependencies": {
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.0.1"
  }
}
